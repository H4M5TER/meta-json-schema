{
  "name": "meta-json-schema",
  "version": "1.19.0",
  "description": "JSON Schema for Clash Meta",
  "keywords": [
    "clash",
    "clash.meta",
    "schema"
  ],
  "files": [
    "schemas",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://github.com/dongchengjie/meta-json-schema",
  "bugs": {
    "url": "https://github.com/dongchengjie/meta-json-schema/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dongchengjie/meta-json-schema"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "lefthook install",
    "dev": "npx json-schema-artifact --watch",
    "release": "npx json-schema-artifact",
    "preview": "pnpm publish --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "json-schema-artifact": "^1.1.3",
    "lefthook": "^1.9.0",
    "prettier": "^3.4.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.0"
}
