{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/clash-verge-rev/clash-verge-rev/schemas/meta-json-schema.json",
  "type": "object",
  "title": "Clash Verge Merge",
  "additionalProperties": true,
  "definitions": {
    "proxies": { "$ref": "./modules/config/proxies.json" },
    "proxy-providers": { "$ref": "./modules/config/proxy-providers.json" },
    "proxy-groups": { "$ref": "./modules/config/proxy-groups.json" },
    "rule-providers": { "$ref": "./modules/rules/provider/provider.json" },
    "rules": { "$ref": "./modules/config/rules.json" }
  },
  "allOf": [
    {
      "type": "object",
      "title": "前置规则配置",
      "properties": {
        "prepend-rules": { "title": "prepend-rules", "$ref": "#/definitions/rules" }
      }
    },
    {
      "type": "object",
      "title": "前置规则提供者配置",
      "properties": {
        "prepend-rule-providers": { "title": "prepend-rule-providers", "$ref": "#/definitions/rule-providers" }
      }
    },
    {
      "type": "object",
      "title": "前置代理节点配置",
      "properties": {
        "prepend-proxies": { "title": "prepend-proxies", "$ref": "#/definitions/proxies" }
      }
    },
    {
      "type": "object",
      "title": "前置代理提供者配置",
      "properties": {
        "prepend-proxy-providers": { "title": "prepend-proxy-providers", "$ref": "#/definitions/proxy-providers" }
      }
    },
    {
      "type": "object",
      "title": "前置代理组配置",
      "properties": {
        "prepend-proxy-groups": { "title": "prepend-proxy-groups", "$ref": "#/definitions/proxy-groups" }
      }
    },
    {
      "type": "object",
      "title": "后置规则配置",
      "properties": {
        "append-rules": { "title": "append-rules", "$ref": "#/definitions/rules" }
      }
    },
    {
      "type": "object",
      "title": "后置规则提供者配置",
      "properties": {
        "append-rule-providers": { "title": "append-rule-providers", "$ref": "#/definitions/rule-providers" }
      }
    },
    {
      "type": "object",
      "title": "后置代理节点配置",
      "properties": {
        "append-proxies": { "title": "append-proxies", "$ref": "#/definitions/proxies" }
      }
    },
    {
      "type": "object",
      "title": "后置代理提供者配置",
      "properties": {
        "append-proxy-providers": { "title": "append-proxy-providers", "$ref": "#/definitions/proxy-providers" }
      }
    },
    {
      "type": "object",
      "title": "后置代理组配置",
      "properties": {
        "append-proxy-groups": { "title": "append-proxy-groups", "$ref": "#/definitions/proxy-groups" }
      }
    }
  ]
